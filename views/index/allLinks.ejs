<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background-color: #f4f6f9;
    color: #333;
    line-height: 1.6;
  }

  .container {
    max-width: 1200px;
    margin-top: 40px;
    padding: 0 15px;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 30px;
    text-align: center;
  }

  .url-item {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    margin-bottom: 25px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .url-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
  }

  .inactive-div {
    background: #f0f0f0;
    border-radius: 15px;
    box-shadow: 4px 4px 10px #d1d1d1, -4px -4px 10px #ffffff;
    border: 2px solid #cccccc;
    opacity: 0.6;
    padding: 20px;
    pointer-events: none;  /* ‚ùå Inactive div will be unclickable */
    user-select: none;     /* üîí Prevents text selection */
}

        .active-div {
            background: #e0f2e9;
            border-radius: 15px;
            box-shadow: 4px 4px 10px #b0c4b1, -4px -4px 10px #ffffff;
            border: 2px solid #28a745;
            padding: 20px;
            transition: all 0.3s ease-in-out;
        }      
  .short-url {
    color: #007bff;
    text-decoration: none;
    font-weight: 500;
    word-break: break-all;
  }

  .short-url:hover {
    text-decoration: underline;
    color: #0056b3;
  }

  .qr-code {
    width: 120px;
    height: 120px;
    border-radius: 10px;
    border: 1px solid #e9ecef;
    object-fit: cover;
    display: block;
    margin: 15px auto;
    transition: transform 0.2s ease;
  }

  .qr-code:hover {
    transform: scale(1.05);
  }

  .buttons {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 15px;
  }

  .btn {
    padding: 8px 16px;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 6px;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn-warning {
    background-color: #f39c12;
    border-color: #f39c12;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-info {
    background-color: #17a2b8;
    border-color: #17a2b8;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .text-muted {
    font-size: 0.85rem;
    color: #6c757d;
  }

  p strong {
    color: #2c3e50;
    font-weight: 600;
  }

  .no-urls {
    font-size: 1.1rem;
    color: #6c757d;
    text-align: center;
    padding: 20px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 768px) {
    .url-item {
      padding: 20px;
    }
    .qr-code {
      width: 100px;
      height: 100px;
    }
    .btn {
      flex: 1 1 48%;
      text-align: center;
    }
  }
</style>

<body>
  <div class="container mt-5">
    <h1>All Shortened URLs</h1>

    <% if (allUrls.length === 0) { %>
      <p class="no-urls">No shortened URLs found.</p>
    <% } else { %>
      <div class="row">
        <% allUrls.forEach(url => { %>
          <div class="col-md-6">
            <div class="url-item <%= url.isActive ? 'active-div' : 'inactive-div' %>">
                
              <!-- URL Info -->
              <div>
                <p><strong>Original URL:</strong> <a href="<%= url.originalUrl %>" target="_blank" class="short-url"><%= url.originalUrl %></a></p>
                <p><strong>Short URL:</strong> <a href="<%= url.shortUrl %>" target="_blank" class="short-url"><%= url.shortUrl %></a></p>
                <p class="text-muted">
                    Created: <%= new Date(url.createdAt).toLocaleString('en-US', { 
                        year: 'numeric', month: 'short', day: 'numeric', 
                        hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true 
                    }) %>
                </p>
                <p class="text-muted">
                    Expires: <%= url.expirationDate && !isNaN(new Date(url.expirationDate)) 
                        ? new Date(url.expirationDate).toLocaleString('en-US', { 
                            year: 'numeric', month: 'short', day: 'numeric', 
                            hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true 
                        }) 
                        : "Never" %>
                </p>
                
                
              </div>

            
               <!-- QR Code -->
               <a href="/api/yourLinks/<%=url._id%>/qrCode">
            <div class="text-center">
              <% if (url.qrCode) { %>
                <img src="/uploads/<%= path.basename(url.qrCode) %>" alt="QR Code" class="qr-code" style="max-width: 300px;">
              <% } else { %>
                <p>QR Code Not Available</p>
              <% } %>
            </div>
          </a> 

              <!-- Actions -->
              <div class="buttons">
                <form action="/api/yourLinks/<%= url._id %>" method="GET">
                  <button type="submit" class="btn btn-warning">Edit</button>
                </form>

                <form action="/api/analytics/<%= url._id %>" method="GET">
                  <button type="submit" class="btn btn-success">Analytics</button>
                </form>

                <a href="/api/download?path=<%= encodeURIComponent(url.qrCode) %>/qrCode" download="qr-code.png" class="btn btn-info">Download QR</a>

                <form action="/api/yourLinks/<%= url._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>